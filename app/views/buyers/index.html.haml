.header
  .header__logo
    =image_tag("logo.png", size: "220x70")

.body
  .buy
    .buy-content
      .buy-content__title
        購入内容の確認
      .buy-content__main
        .buy-image
          = image_tag "#{@item.item_imgs[0].image.url}", size: '64x64', class: 'buydetails-contet__image'
        .buy-details
          .buy-details__item-name
            = @item.name
          .buy-details__item-price
            ¥
            %span.main__shopping-free 
            = "¥#{@item.price.to_s}"

    .price
      .price__left
        お支払い金額
      .price__right
        ¥
        %span.price__shopping-free
        = "¥#{@item.price.to_s}"
    .user-info
      .user-info__inner
        お支払い方法
      .inner-credit
        .inner-credit__brand
          %figure
            =image_tag("visaカード.png")
        .card
          - if @default_card_information.blank?
            %br /
          - else
            = "**** **** **** " + "#{@default_card_information.last4}"
            %br
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = "有効期限 " + exp_month + " / " + exp_year
            %br

    .adress
      .adress__post
        配送先
      .adress__info
        住所 111-2222
        %p 東京都 千代田区 丸の内 1-1-1
        
      .adress__name
        %p 氏名  
        %p 田中 太郎 様

    .purchase
      .submit
      = form_tag(action: :pay, method: :post) do
        %button.buy-button{type:"submit"} 購入する

