.Single__container__main
  .Single__container__main__head
  .Single__container__main__head__inner
  .Single__container__main__head__inner__content
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .form-group
        = f.label :nick_name
        %br/
        = f.text_field :nick_name, autofocus: true
      .form-group
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .form-group
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password"
      .form-group
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .formField__label--normal
        = f.label :birth_day
      .formField__label--normal
        = raw sprintf(f.date_select(:birth_day,use_month_numbers: true,start_year: 1930,end_year: (Time.now.year - 18),default: Date.new(1989, 1, 1),date_separator: '%s'),'年 ', '月 ') + '日'
      .actions
        = f.submit "Sign up"
    = render "devise/shared/links"