            .item-detail__inner__box
              .item-detail__inner__box__select
                
        .item-detail
          .item-detail__inner
            .item-detail__inner__name
              %label.item-detail__inner__name__down
                ブランド
              %span.optional
                任意
            .item-detail__inner__box
              .item-detail__inner__box__select
                %input{autocomplete: "off",name: "brandName", placeholder: "例）シャネル", type: "text", value: ""}/

            
        .item-detail
          .item-detail__inner
            .item-detail__inner__name
              %label.item-detail__inner__name__down
                商品の状態
              %span.require
                必須
            .item-detail__inner__box
              .item-detail__inner__box__select
                %select{name: "itemCondition"}
                  %option{"aria-selected": "true", label: "選択してください", selected: "selected", value: ""} 選択してください
