      %table.detail
        %tbody
          %tr
            %th
              出品者
            %td
              = link_to @item.user.nick_name, "#"
              %div.evaluation
                %div
                  %i.fas.fa-laugh
                  = rand(100)
                %div
                  %i.fas.fa-sad-tear
                  = rand(100)
          %tr
            %th
              カテゴリー
            %td.category
              = link_to "#" do
                .category
                  %span
                    -# バッグ
                    = @grandchild.name
              = link_to "#" do
                .category
                  %i.fas.fa-chevron-right
                    %span
                      -# ばっぐばっぐ
                      = @child.name
              = link_to "#" do
                .category
                  %i.fas.fa-chevron-right
                    %span
                      -# ばっぐばっぐばっぐ
                      = @parent.name
          %tr
            %th
              ブランド
            %td
              = @item.brand
          %tr
            %th
              商品の状態
            %td
              = @item.status
          %tr
            %th
              配送料の負担
            %td
              = @item.postage
          %tr
            %th
              配送元地域
            %td
              = @item.prefecture
          %tr
            %th
              発送日の目安
            %td
              = @item.shipping_date
    .price
      %span.price__amount
        ¥
        = @item.price
      %span.price__tax
        (税込)
      %span.price__postage-included
        送料込み
    .message
      -if user_signed_in? && current_user.id == @item.user_id
        = link_to "商品の編集", "#", class: "submit-btn submit-btn--red"
        %p
          or
        = link_to "出品を再開する","", class: "submit-btn submit-btn--red"
        = link_to "この商品を削除する", item_path, class: "submit-btn submit-btn--gray", method: "DELETE"
      - elsif @item.sale_status == "出品中"
        = link_to "購入画面に進む", "#", class: "item__purchase-screen-button"
      - elsif @item.sale_status == "公開停止中"
        = link_to "この商品は公開停止中です", "", class: "submit-btn submit-btn--gray"
      - else
        = link_to "この商品の取引は完了しました", "", class: "submit-btn submit-btn--gray"

    .description
      %p.description__inner
        = simple_format @item.explain
    .buttons
      .buttons__left
        %button.buttons__left__heart
          %i.far.fa-heart
          %span
            いいね!
          %span
            = rand (1000)
        %button.buttons__left__report
          %i.far.fa-flag
          %span
            不適切な商品の報告
      .buttons__right
        = link_to "#" do
          %i.fas.fa-lock
          %span
            あんしん・あんぜんへの取り組み

  .comment
    .container
