= render "header"

.container
  .item
    %h1.item__name
      = @items.name
    .item__main
      .item__main__images
        .item__main__images__display
          - if @item.sale_status == "SOLD"
            .badge.sold
              SOLD
          %ul.item__main__images__display__up
            - @item.item_images.each do |item_image|
            テスト
              %li.item__main__images__display__up__slide-image
                = image_tag item_image.image_url, size: "300x300"
          %ul.item__main__images__display__down
            - @item.item_images.each do |item_image|
              %li.item__main__images__display__down__thumbnail-image
                = image_tag item_image.image_url, size: "60x60"
      %table.item__main__detail
        %tbody
          %tr
            %th
              出品者
            %td
              = link_to @item.user.nickname, ""
              %div.evaluation
                %div
                  %i.far.fa-laugh
                  = rand(100)
                %div
                  %i.far.fa-sad-tear
                  = rand(100)
          %tr
            %th
              カテゴリー
            %td.category
              = link_to "" do
                .category
                  %span
                    = @category_name
              = link_to "" do
                .category
                  %i.fas.fa-chevron-right
                    %span
                      = @category_name
              = link_to "" do
                .category
                  %i.fas.fa-chevron-right
                    %span
                      = @category_name
          %tr
            %th
              ブランド
            %td
              Dチーム
          %tr
            %th
              商品の状態
            %td
              = @item.status
          %tr
            %th
              配送料の負担
            %td
              = @item.postage
          %tr
            %th
              配送元地域
            %td
              = link_to @item.prefecture, ""
          %tr
            %th
              発送日の目安
            %td
              = @item.shipping_date
    .item__price
      %span.item__price__amount
        ¥
        = @item.price
      %span.item__price__tax
        (税込)
      %span.item__price__postage-included
        送料込み
    .item__message
      -if user_signed_in? && current_user.id == @item.user_id
        = link_to "商品の編集", "#", class: "submit-btn submit-btn-red"
        %p
          or
        = link_to "出品を再開する","", class: "submit-btn submit-btn-red"
        = link_to "この商品を削除する", item_path, class: "submit-btn submit-btn-gray", method: "DELETE"
      - elsif @item.sale_status == "出品中"
        .item__message__money
          売上金¥
          = rand(1000)
          とP
          = rand(1000)
          を
          %br
          お持ちです。
        = link_to "購入画面に進む", new_item_purchase_path(@item), class: "item__purchase-screen-button"
      - elsif @item.sale_status == "交渉中"
        = link_to "この商品は交渉中です", "", class: "submit-btn submit-btn-gray"
      - elsif @item.sale_status == "公開停止中"
        = link_to "この商品は公開停止中です", "", class: "submit-btn submit-btn-gray"
      - else
        = link_to "この商品の取引は完了しました", "", class: "submit-btn submit-btn-gray"
    .item__description
      %p.item__description__inner
        = simple_format @item.explain
    .item__buttons
      .item__buttons__left
        %button.item__buttons__left__heart
          %i.far.fa-heart
          %span
            いいね!
          %span
            = rand (1000)
        %button.item__buttons__left__report
          %i.far.fa-flag
          %span
            不適切な商品の報告

      .item__buttons__right
        = link_to "#" do
          %i.fas.fa-lock
          %span
            あんしん・あんぜんへの取り組み

  .comment
    .comment__container
      %form.comment__message-form
        %p.comment__message-form__attention
          相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
        %textarea.comment__message-form__text
        %button.comment__message-form__comment-btn
          %span
            コメントする

  %ul.item-link
    %li.item-link__prev
      = link_to "#" do
        %i.fas.fa-chevron-left
        前の商品
    %li.item-link__next
      = link_to "#" do
        次の商品
        %i.fas.fa-chevron-right

  .social-media
    %ul.social-media__box
      %li.social-media__box__facebook
        = link_to "" do
          %i.fab.fa-facebook-square.fa-3x
      %li.social-media__box__twitter
        = link_to "" do
          %i.fab.fa-twitter-square.fa-3x
      %li.social-media__box__line
        = link_to "" do
          %i.fab.fa-line.fa-3x
      %li.social-media__box__pinterest
        = link_to "" do
          %i.fab.fa-pinterest-square.fa-3x

  .other-items
    .other-items__login-user
      %h2.other-items__login-user__title
        = link_to "#{@item.user.nickname}さんのその他の出品", ""
      .other-items__login-user__items
        - @item.user.items.where(sale_status: "出品中").each do |item|
          .other-items__login-user__items__item
            = link_to "/items/#{item.id}", class:"other-items__login-user__items__item__link" do
              %figure.other-items__login-user__items__item__link__image
                = image_tag item.item_images.find_by(item_id: item.id).image_url, size:"220x220"
              .other-items__login-user__items__item__link__body
                %h3.other-items__login-user__items__item__link__body__name
                  = item.title
                .other-items__login-user__items__item__link__body__num
                  .other-items__login-user__items__item__link__body__num__price
                    ¥
                    = item.price
                  .other-items__login-user__items__item__link__body__num__heart
                    %i.far.fa-heart
                    %span
                      = rand(1000)

    .other-items__same-category
      %h2.other-items__same-category__title
        = link_to "その他の商品", ""
      .other-items__same-category__items
        - @items.each do |item|
          .other-items__same-category__items__item
            = link_to item_path(item.id), class:".other-items__same-category__items__item__link" do
              %figure.other-items__same-category__items__item__link__image
                = image_tag src= item.item_images.first.image_url, size: "220x220"
              .other-items__same-category__items__item__link__body
                %h3.other-items__same-category__items__item__link__body__name
                  = item.title
                .other-items__same-category__items__item__link__body__num
                  .other-items__same-category__items__item__link__body__num__price
                    ¥
                    = item.price