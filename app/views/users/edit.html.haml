.AccountPage
  .AccountPage__title
    %h2 Edit Account
    %h5 アカウントの編集
    = link_to "ログアウト", '#', class: 'Button'
    = link_to "トップページに戻る", :back, class: 'Button'
  .AccountPage__form
    = form_for(current_user) do |f|
      .FormField
        .FormField__label--normal
          = f.label :nickname
        .FormField__input--normal
          = f.text_field :nickname, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :email
        .FormField__input--normal
          = f.email_field :email
        .FormField__label--normal
          = f.label :first_name
        .FormField__input--normal
          = f.text_field :first_name, autofocus: true
        .FormField__label--normal
          = f.label :last_name
        .FormField__input--normal
          = f.text_field :last_name, autofocus: true
        .FormField__label--normal
          = f.label :first_name_kana
        .FormField__input--normal
          = f.text_field :first_name_kana, autofocus: true
        .FormField__label--normal
          = f.label :last_name_kana
        .FormField__input--normal
          = f.text_field :last_name_kana, autofocus: true
        .FormField__label--normal
          = f.label :birthday
        .FormField__input--normal
          != sprintf(f.date_select(:birthday, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
      = f.submit "Update", class: 'Button UserButton'